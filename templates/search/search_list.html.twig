{% extends 'base.html.twig' %}

{% block title %}Twoje wyszukiwania{% endblock %}

{% block body %}


    <h1>Twoje wyszukiwania</h1>
    
    <table class="table table-bordered" id="search-list">
	   <thead class="thead">
	    <tr>
	      <th scope="col">Nazwa wyszukiwania</th>
	      <th scope="col">Akcje</th>
	    </tr>
	  </thead>
	  <tbody>
    	
		{% for search in user.searches %}

			<tr data-search-id="{{ search.id }}">
				<td>{{ search.name }}</td>
				<td>
					<a class="btn btn-info" href="{{ path("search_edit", {id: search.id}) }}">Edytuj</a>
					<button type="button" data-search-id="{{ search.id }}" class="btn btn-danger remove-search">Usu≈Ñ</button>
				</td>
			</tr>

		{% endfor %}

		</tbody>
    </table>


{% endblock %}

{% block javascripts %}
	<script src="/js/search_list/includes/display-service.js"></script>
	<script src="/js/search_list/includes/search-service.js"></script>
	<script src="/js/search_list/functions.js"></script>
{% endblock %}