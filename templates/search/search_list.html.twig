{% extends 'base.html.twig' %}

{% block meta_title %}Twoje wyszukiwania{% endblock %}
{% block title %}
	Twoje wyszukiwania
	<a href="{{ path("search_new") }}" class="btn btn-outline-info">
		<i class="fas fa-plus"></i> Utwórz
	</a>
{% endblock %}

{% block body %}
    <table class="table table-hover" id="search-list">
	   <thead class="thead">
	    <tr>
	      <th scope="col">Nazwa wyszukiwania</th>
	      <th scope="col">Akcje</th>
	    </tr>
	  </thead>
	  <tbody>
    	
		{% for search in user.searches %}

			<tr data-search-id="{{ search.id }}">
				<td>{{ search.name }}</td>
				<td>
					<a class="btn btn-info" href="{{ path("search_edit", {id: search.id}) }}"><i class="far fa-edit"></i> Edytuj</a>
					<button type="button" data-search-id="{{ search.id }}" class="btn btn-danger remove-search"><i class="fas fa-times"></i> Usuń</button>
				</td>
			</tr>

		{% endfor %}

		</tbody>
    </table>


{% endblock %}

{% block javascripts %}
	<script src="/js/search_list/includes/display-service.js"></script>
	<script src="/js/search_list/includes/search-service.js"></script>
	<script src="/js/search_list/functions.js"></script>
{% endblock %}