{% verbatim %}
<script id="search-select-template" type="text/x-handlebars-template">
	<option selected disabled>-- wybierz --</option>

	<optgroup label="Filtry podstawowe">
		{{#each basicFilters}}
		<option value="{{filterId}}">{{filterName}}</option>
		{{/each}}
	</optgroup>

	<optgroup label="Filtry rozszerzone">
		{{#each countryFilters}}
		<option value="{{filterId}}">{{filterName}}</option>
		{{/each}}

		{{#unless countryFilters}}
		<option disabled>Najpierw dodaj filtr podstawowy</option>
		{{/unless}}
	</optgroup>

	<optgroup label="Filtry kategorii">
		{{#each categoryFilters}}
		<option value="{{filterId}}">{{filterName}}</option>
		{{/each}}

		{{#unless categoryFilters}}
		<option disabled>Najpierw dodaj filtr "Kategoria"</option>
		{{/unless}}
	</optgroup>
</script>

<script id="filter-display-template" type="text/x-handlebars-template">
	<p class="filter-row" id="filter-row-{{meta.filterId}}">
		{{meta.filterName}}
        <button type="button" class="btn btn-info edit-filter" data-filterid="{{meta.filterId}}">Edytuj</button>
        <button type="button" class="btn btn-danger remove-filter" data-filterid="{{meta.filterId}}">Usu≈Ñ</button>
	</p>
</script>

<script id="new-search-checkbox-template" type="text/x-handlebars-template">
	<form id="new-search-form">
		{{#each filterValues.item}}
		<div class="form-check">
		  <input class="form-check-input" type="checkbox" value="{{filterValueId}}" id="filter-{{filterValueId}}" name="new-filter-value[]">
		  <label class="form-check-label" for="filter-{{filterValueId}}">
		   	{{filterValueName}}
		  </label>
		</div>
		{{/each}}
	</form>
</script>

<script id="new-search-combobox-template" type="text/x-handlebars-template">
	<form id="new-search-form">
		<select name="new-filter-value[]">
			{{#each filterValues.item}}
			<option value="{{filterValueId}}">{{filterValueName}}</option>
			{{/each}}
		</select>
	</form>
</script>

<script id="new-search-textbox-template" type="text/x-handlebars-template">
	<form id="new-search-form">
		{{#if filterIsRange}}
			<label for="start-value">Od:</label>
			<input type="text" class="form-control" id="start-value" name="new-filter-value[]">
			<label for="end-value">Do:</label>
			<input type="text" class="form-control" id="end-value" name="new-filter-value[]">
		{{else}}
			<input type="text" class="form-control" name="new-filter-value[]">
		{{/if}}
	</form>
</script>

<script id="new-search-category-template" type="text/x-handlebars-template">
	<form id="new-search-form">
		<div id="category-picker-list">

		</div>
		<input type="hidden" class="form-control" name="new-filter-value[]" id="category-id" value="0">
	</form>
</script>

<script id="new-search-category-picker-list-template" type="text/x-handlebars-template">
	<ul>
	{{#if parentCategory}}
		<li class="category-to-pick" data-category-id="{{parentCategory.catParent}}">wstecz ({{parentCategory.catName}})</li>
	{{/if}}

	{{#each categories}}
		<li class="category-to-pick" data-category-id="{{catId}}">{{catName}}</li>
	{{/each}}
	</ul>
</script>
{% endverbatim %}