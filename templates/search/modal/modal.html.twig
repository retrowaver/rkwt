<!-- Modal -->
<div class="modal fade" id="new-search-modal" tabindex="-1" role="dialog" aria-labelledby="new-search-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-search-modal-label"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="{% trans %}label.close{% endtrans %}">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}label.cancel{% endtrans %}</button>
        <button type="button" class="btn btn-success save-filter">{% trans %}label.save{% endtrans %}</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal 2 -->
<div class="modal fade" id="filter-picker-modal" tabindex="-1" role="dialog" aria-labelledby="new-search-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-search-modal-label">{% trans %}message.choose-filter-type{% endtrans %}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="{% trans %}label.close{% endtrans %}">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <select id="filters-container"></select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}label.cancel{% endtrans %}</button>
        <button type="button" class="btn btn-success new-filter">{% trans %}label.proceed{% endtrans %}</button>
      </div>
    </div>
  </div>
</div>